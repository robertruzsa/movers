<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBlue</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textColor">@color/colorBlueDark</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="SwitchCompatTheme">
        <item name="android:thumbTint">@color/colorBlueDark</item>
        <item name="android:trackTint">@color/colorBlueDark</item>
    </style>

</resources>
